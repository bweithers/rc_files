

"
" Settings
"
"

syntax on
color elflord
set noerrorbells
set number
set backspace=indent,eol,start
set showcmd
set showmode

set noswapfile
set nobackup
set nowritebackup
set splitright
set splitbelow
set encoding=utf-8
set autowrite
set autoread

set ruler
au FocusLost * :wa

set fileformats=unix,dos,mac

set tabstop=4
set shiftwidth=4
set expandtab
set noshowmatch
set incsearch
set hlsearch
set ignorecase
set smartcase
set ttyfast

set lazyredraw

set cursorline

